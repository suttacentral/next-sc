{
  "lint": {
    "rules": [
      "polymer-2"
    ]
  },
  "entrypoint": "index.html",
  "extraDependencies": [
    "./localization/elements/**/*.json",
    "./styles/**/*.json",
    "./img/**/*",
    "./files/**/*",
    "./node_modules/workbox-sw/build/importScripts/*",
    "./manifest.json",
    "./service-worker.js"
  ],
  "builds": [
    {
      "bundle": {
        "stripComments": true,
        "inlineCss": true,
        "sourcemaps": false,
        "excludes": ["bower_components/webcomponentsjs/webcomponents-loader.js"]
      },
      "js": {
        "compile": true,
        "minify": true
      },
      "css": {
        "minify": true
      },
      "html": {
        "minify": true
      },
      "addServiceWorker": false
    }
  ]
}