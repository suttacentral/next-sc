{
    "inherits": ["default"],
    "settings": {
        "analysis": {
            "filter": {
                "norwegian_stop": {
                    "type":             "stop",
                    "stopwords":    "_norwegian_" 
                },
                "norwegian_stemmer": {
                    "type":             "stemmer",
                    "language":     "norwegian"
                }
            },
            "analyzer": {
                "no": {
                    "tokenizer":    "standard",
                    "filter": [
                        "lowercase",
                        "sanskrit_pali_synonym",
                        "norwegian_stop",
                        "norwegian_stemmer"
                    ]
                }
            }
        }
    },
    "mappings": {
        "text": {
            "properties": {
                "content": {
                    "fields": {
                        "stemmed": {
                            "type": "text",
                            "term_vector": "with_positions_offsets",
                            "analyzer": "no"
                        }
                    }
                }
            }
        }
    }
}
