{
    "inherits": ["default"],
    "settings": {
        "analysis": {
            "filter": {
                "english_stop": {
                    "type":             "stop",
                    "stopwords":    "_english_" 
                }
            },
            "analyzer": {
                "cjk": {
                    "tokenizer":    "standard",
                    "filter": [
                        "cjk_width",
                        "lowercase",
                        "cjk_bigram",
                        "english_stop"
                    ]
                }
            }
        }
    }
}
